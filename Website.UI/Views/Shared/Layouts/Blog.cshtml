@using Website.Domain.Blog.ViewModels
@using Humanizer
@{
    Layout = "~/Views/Shared/Layouts/Main.cshtml";

    var viewModel = ViewData["Blog"] as BlogListingViewModel;
}

<div class="divide20"></div>
<div class="row">
    <div class="col-md-12">
        <div class="center-heading">
            <h2>Things i do</h2>
            <span class="center-line"></span>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            @RenderBody()
        </div>
        <!--col-->
        <div class="col-md-3 col-md-offset-1">
            <div class="sidebar-box margin40">
                <h4>Search</h4>
                <form role="form" method="GET" action="/blog" class="search-widget">
                    <input type="text" name="k" id="k" class="form-control">
                    <i class="fa fa-search"></i>
                </form>
            </div>
            <!--sidebar-box-->
            <div class="sidebar-box margin40">
                <h4>Aboot.</h4>
                <p>
                    @viewModel.Listing.MetaDescription
                </p>
            </div>
            @if (viewModel.Categories != null && viewModel.Categories.Any())
            {
                <!--sidebar-box-->
                <div class="sidebar-box margin40">
                    <h4>Categories</h4>
                    <ul class="list-unstyled cat-list">
                        @foreach (var category in viewModel.Categories)
                        {
                            <li><a href="/blog?c=@category.Name">@category.Name.Humanize(LetterCasing.Title) (@category.Count)</a> <i class="fa fa-angle-right"></i></li>
                        }
                    </ul>
                </div>
            }
            <!--sidebar-box-->
            <div class="sidebar-box margin40">
                <h4>Random Posts</h4>
                <ul class="list-unstyled popular-post">
                    <li>
                        <div class="popular-img">
                            <a href="#">
                                <img src="/content/img/img-7.jpg" class="img-responsive" alt=""></a>
                        </div>
                        <div class="popular-desc">
                            <h5><a href="#">blog post image</a></h5>
                            <h6>31st july 2014</h6>
                        </div>
                    </li>
                    <li>
                        <div class="popular-img">
                            <a href="#">
                                <img src="/content/img/img-8.jpg" class="img-responsive" alt=""></a>
                        </div>
                        <div class="popular-desc">
                            <h5><a href="#">blog post image</a></h5>
                            <h6>31st july 2014</h6>
                        </div>
                    </li>
                    <li>
                        <div class="popular-img">
                            <a href="#">
                                <img src="/content/img/img-9.jpg" class="img-responsive" alt=""></a>
                        </div>
                        <div class="popular-desc">
                            <h5><a href="#">blog post image</a></h5>
                            <h6>31st july 2014</h6>
                        </div>
                    </li>
                </ul>
            </div>
            @if (viewModel.Tags != null && viewModel.Tags.Any())
            {
                <!--sidebar-box-->
                <div class="sidebar-box margin40">
                    <h4>Tag Cloud</h4>
                    <div class="tag-list">
                        @foreach (var tag in viewModel.Tags)
                        {
                            <a href="/blog?t=@tag.Name">@tag.Name.Humanize(LetterCasing.Title)</a>
                        }
                    </div>
                </div>
            }
        </div>
        <!--sidebar-col-->
    </div>
    <!--row for blog post-->
</div>
<!--blog full main container-->
