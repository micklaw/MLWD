@using Website.Domain.Home.Models.Archetypes
@model Website.Domain.Service.ViewModels.ServicesViewModel
@{
    var services = (Model.Content.ServicesList ?? new List<Service>()).Where(i => !i.Disabled).ToList();
}
<div class="divide20"></div>
