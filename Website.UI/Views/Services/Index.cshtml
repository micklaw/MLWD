<div class="container">
    <div class="row">
        <div class="col-md-6 margin20">
            <p>
                @ViewBag.MetaDescription
            </p>
        </div>
        <div class="col-md-6">
            @if (Model.Content.ServiceImage != null && Model.Content.ServiceImage.HasUrl)
            {
                @Html.FluidImage(Model.Content.ServiceImage, true, 555, 260)
            }
        </div>
    </div>
    <!--about intro-->
</div>

@if (services.Any())
{
    <div class="divide60"></div>
    <div class="container">
        @Html.Partial("Services", services)
    </div>
    <!--services row-->
}

